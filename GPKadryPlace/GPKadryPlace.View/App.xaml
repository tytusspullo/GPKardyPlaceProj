<Application x:Class="GPKadryPlace.View.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GPKadryPlace.View"
             xmlns:views="clr-namespace:GPKadryPlace.View.Views"
             xmlns:viewmodels="clr-namespace:GPKadryPlace.ViewModel.ViewModels;assembly=GPKadryPlace.ViewModel"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        
        <DataTemplate DataType="{x:Type viewmodels:HomeViewModel}" >
            <views:HomeView/>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type viewmodels:EmployeeViewModel}" >
            <views:EmployeeView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:EmployeeAbsenteeismViewModel}" >
            <views:EmployeeAbsenteeismView/>
        </DataTemplate>

    </Application.Resources>
</Application>
